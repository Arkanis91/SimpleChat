<Window x:Class="SimpleChat.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sampleData="clr-namespace:SimpleChat.Wpf.SampleData"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <sampleData:MainWindowViewModelSampleData/>
    </Window.DataContext>
    
    <Grid>
        <TextBlock Text="{Binding Path=Status}" Background="{Binding Path=Status, Converter={StaticResource StatusToColorConverter}}"/>
    </Grid>
</Window>
